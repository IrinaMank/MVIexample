<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/InconsolataTextViewStyle</item>
        <item name="textAppearanceButton">@style/InconsolataButtonStyle</item>
    </style>

    <style name="InconsolataTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inconsolata_regular</item>
    </style>

    <style name="InconsolataButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/inconsolata_regular</item>
    </style>

</resources>